{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "app-shim.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "composite": true,
    "noEmit": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
    }
  }
}
